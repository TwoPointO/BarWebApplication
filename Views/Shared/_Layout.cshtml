@using Microsoft.AspNetCore.Identity
@using BarWebApplication.Areas.Identity.Data
@using BarWebApplication.Controllers
@using BarWebApplication.Models
@using BarWebApplication.Areas.Identity.Pages 
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Online menu</title>
    <link rel="icon" href="~/img/favicon.png">
    <link rel="stylesheet" href="~/css/fontawesome-free-5.14.0-web/css/all.css" />
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true" />
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" asp-append-version="true" />
    <!-- themify CSS -->
    <link rel="stylesheet" href="~/css/themify-icons.css" asp-append-version="true" />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/css/flaticon.css" asp-append-version="true" />
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true" />
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/css/slick.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/gijgo.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nice-select.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header class="main_menu">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <img src="~/img/logo.png" alt="logo">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse main-menu-item justify-content-end" id="navbarSupportedContent">
                            <div class="navbar-nav">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <div class="admin-navbar">
                                        <div class="dropdown dropbtn nav-link">
                                            <a class="nav-link" asp-controller="admin" asp-action="Index">Admin</a>
                                        </div>
                                        <div class="dropdown">
                                            <button class="dropbtn nav-link">Items</button>
                                            <div class="dropdown-content">
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Items" asp-action="Create">Add New Item</a>
                                                </div>
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Items" asp-action="Index">Edit Items</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <button class="dropbtn nav-link">Categories</button>
                                            <div class="dropdown-content">
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Categories" asp-action="Create">Add Category</a>
                                                </div>
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Categories" asp-action="Index">Edit Categories</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <button class="dropbtn nav-link">Daily Deals</button>
                                            <div class="dropdown-content">
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="DailyDeals" asp-action="Create">Add Daily Deal</a>
                                                </div>
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="DailyDeals" asp-action="Index">Edit Daily Deals</a>
                                                </div>
                                                @*
                                <div class="nav-item">
                                    <a class="nav-link" asp-controller="DailyDeals" asp-action="DeleteAll">Delete Daily Deals</a>
                                </div>
                                                *@
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <button class="dropbtn nav-link">Orders</button>
                                            <div class="dropdown-content">
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Orders" asp-action="AllOrders">View Orders</a>
                                                </div>
                                                <div class="nav-item">
                                                    <a class="nav-link" asp-controller="Orders" asp-action="ClearAll">Delete Completed Orders</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dropdown dropbtn nav-link">
                                            <div class="nav-item">
                                                <a class="nav-link" asp-controller="Reservations" asp-action="Index">Reservations</a>
                                            </div>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                    </div>
                                    <div class="nav-item">
                                        <a class="nav-link" asp-controller="Cart" asp-action="Index">My Cart</a>
                                    </div>                                   
                                    <div class="nav-item">
                                        <a class="nav-link" href="#">About</a>
                                    </div>
                                    <div class="nav-item">
                                        <a class="nav-link" asp-controller="Items" asp-action="Index">Menu</a>
                                    </div>
                                    <div class="nav-item">
                                        <a class="nav-link" href="#">Contact</a>
                                    </div>
                                }

                            </div>
                        </div>
                        <div class="menu_btn">
                            <a asp-controller="Reservations" asp-action="Create" class="single_page_btn d-none d-sm-block">book a table</a>
                        </div>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <partial name="_LoginPartial" />
                        }
                        
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Header part end-->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer part start-->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-sm-6 col-md-4">
                    <div class="single-footer-widget footer_1">
                        <h4>About Us</h4>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-md-4">
                    <div class="single-footer-widget footer_2">
                        <h4>Important Link</h4>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-md-4">
                    <div class="single-footer-widget footer_2">
                        <h4>Contact us</h4>
                        <div class="contact_info">
                            <p><span> Address :</span>Gdjegod</p>
                            <p><span> Phone :</span> +1 234 567 8910</p>
                            <p><span> Email : </span>info@ja.com</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-8 col-md-6">
                    <div class="single-footer-widget footer_3">
                        <h4>Newsletter</h4>
                        <p>...</p>
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'">
                                    <div class="input-group-append">
                                        <button class="btn" type="button"><i class="fas fa-paper-plane"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer part end-->
    <!-- jquery plugins here-->
    <!-- popper js -->
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <!-- easing js -->
    <script src="~/js/jquery.magnific-popup.js" asp-append-version="true"></script>
    <!-- swiper js -->
    <script src="~/js/swiper.min.js" asp-append-version="true"></script>
    <!-- swiper js -->
    <script src="~/js/masonry.pkgd.js" asp-append-version="true"></script>
    <!-- particles js -->
    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>
    <!-- swiper js -->
    <script src="~/js/slick.min.js" asp-append-version="true"></script>
    <script src="~/js/gijgo.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.nice-select.min.js" asp-append-version="true"></script>
    <!-- custom js -->

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
